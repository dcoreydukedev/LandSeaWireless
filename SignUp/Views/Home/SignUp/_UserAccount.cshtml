@model UserAccountViewModel
<!-- Wizard Step 1: Create Account -->
<fieldset id="wizard_step_1" class="container wizard_step">
    <!-- Wizard Step Title Container -->
    <header class="row wizard_step_title_container">
        <!-- Wizard Step Title -->
        <h2 class="col-10 offset-2 wizard_step_title">
            Step 1: Create Your User Account
        </h2>
    </header>
    <!-- Wizard Step Content Container -->
    <div class="row wizard_step_content_container">
        <!-- Wizard Step Content -->
        <fieldset class="col-10 offset-2 wizard_step_content">
            <div class="form-group row">
                <label for="txtUsername" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="txtUsername" asp-for="Username" placeholder="Username" />
                </div>
            </div>
            <div class="form-group row">
                <label for="txtPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="txtPassword" asp-for="Password" placeholder="Password" />
                </div>
            </div>
        </fieldset>
    </div>
    <!-- Wizard Step Navigation Container -->
    <footer class="row wizard_step_navigation_container">
        <!-- Wizard Step Navigation -->
        <nav class="col-10 offset-2 wizard_step_navigation">

            <a id="wizard_step_1_nav_next" class="wizard_step_nav wizard_step_nav_next" href="#">
                Next >>
            </a>

        </nav>
    </footer>
</fieldset>
<!-- End Wizard Step -->