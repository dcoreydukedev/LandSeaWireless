@model InstallationAddressViewModel

<div class="form-group row">
    <h5 class="text-info">Physical Address of the service installation.</h5>
</div>

<div class="form-group row">
    <label for="txtInstallAddress" class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="txtInstallAddress" placeholder="123 Any Street" asp-for="InstallAddress.Address1" />
    </div>
</div>
<div class="form-group row">
    <label for="txtInstallCity" class="col-sm-2 col-form-label">City</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="txtInstallCity" placeholder="New York" asp-for="InstallAddress.City" />
    </div>
</div>
<div class="form-group row">
    <label for="ddlInstallState" class="col-sm-2 col-form-label">State</label>
    <div class="col-sm-10">
        <select id="ddlInstallState" asp-for="InstallAddress.State" asp-items="Html.GetEnumSelectList<LandSeaWireless.Models.Domain.State>()">
            <option selected="selected" value="">-- Please Select --</option>
        </select>
    </div>
</div>
<div class="form-group row">
    <label for="txtInstallZip" class="col-sm-2 col-form-label">Zip</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="txtInstallZip" placeholder="12345" asp-for="InstallAddress.Zip" />
    </div>
