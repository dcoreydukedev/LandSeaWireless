@model InstallationAddressViewModel
<!-- Wizard Step 4: Installation Address -->
<fieldset id="wizard_step_4" class="container wizard_step">
    <!-- Wizard Step Title Container -->
    <header class="row wizard_step_title_container">
        <!-- Wizard Step Title -->
        <h2 class="col-10 offset-2 wizard_step_title">
            Step 4: Where Do We Install the Service?
        </h2>
    </header>
    <!-- Wizard Step Content Container -->
    <div class="row wizard_step_content_container">
        <!-- Wizard Step Content -->
        <fieldset class="col-10 offset-2 wizard_step_content">

            <div class="form-group row">
                <h3 class="text-info">Physical Address of the service installation.</h3>
            </div>

            <div class="form-group row">
                <label for="txtInstallAddress" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="txtInstallAddress" placeholder="123 Any Street" asp-for="InstallAddress.Address1" />
                </div>
            </div>
            <div class="form-group row">
                <label for="txtInstallCity" class="col-sm-2 col-form-label">City</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="txtInstallCity" placeholder="New York" asp-for="InstallAddress.City" />
                </div>
            </div>
            <div class="form-group row">
                <label for="ddlInstallState" class="col-sm-2 col-form-label">State</label>
                <div class="col-sm-10">
                    <select id="ddlInstallState" asp-for="InstallAddress.State" asp-items="Html.GetEnumSelectList<LandSeaWireless.Models.Domain.State>()">
                        <option selected="selected" value="">-- Please Select --</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtInstallZip" class="col-sm-2 col-form-label">Zip</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="txtInstallZip" placeholder="12345" asp-for="InstallAddress.Zip" />
                </div>
            </div>

        </fieldset>
    </div>

    <!-- Wizard Step Navigation Container -->
    <footer class="row wizard_step_navigation_container">
        <!-- Wizard Step Navigation -->
        <nav class="col-10 offset-2 wizard_step_navigation">

            <a id="wizard_step_4_nav_prev" class="wizard_step_nav wizard_step_nav_prev" href="#">
                << Prev
            </a>

            &nbsp;&nbsp;|&nbsp;&nbsp;

            <a id="wizard_step_4_nav_next" class="wizard_step_nav wizard_step_nav_next" href="#">
                Next >>
            </a>

        </nav>
    </footer>
</fieldset>
<!-- End Wizard Step -->